<Window x:Class="ZdravoKlinika.UI.ManagerUI.ManagerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoKlinika.UI.ManagerUI"
        mc:Ignorable="d"
        Title="ManagerMainWindow" Height="768" Width="1024">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Ordinacija" Click="MenuItem_Click">
                </MenuItem>
                <MenuItem Margin="630, 0, 0, 0" Header="Promena teme">
                    <MenuItem Header="Svetla" />
                    <MenuItem Header="Tamna" />
                </MenuItem>
                <MenuItem Header="Srpski"></MenuItem>
                <MenuItem Header="English"></MenuItem>
                <MenuItem Header="Ruski"></MenuItem>
                <MenuItem Header="Logovanje" Click="MenuItem_Click"></MenuItem>
            </Menu>
            
            <TextBox AcceptsReturn="True" Name="txtEditor" />
        </DockPanel>
    </Grid>
</Window>
