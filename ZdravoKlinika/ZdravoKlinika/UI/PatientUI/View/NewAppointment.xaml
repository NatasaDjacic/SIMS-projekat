<Page x:Class="ZdravoKlinika.UI.PatientUI.View.NewAppointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoKlinika.UI.PatientUI.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewAppointments" >

    <DockPanel >
        <Grid DockPanel.Dock="Top" Margin="0 15" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="New appointment" Grid.Column="0" FontSize="32" FontWeight="Bold"></TextBlock>
            <TextBox Grid.Column="1" Width="250"  FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
        </Grid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button   Click="Button_Click_New" Content="Add" Width="240" HorizontalAlignment="Right" Margin="0 15" Height="40" FontSize="24" FontWeight="SemiBold"  Background="Green" Foreground="White" ></Button>


        </StackPanel>
        
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="660" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            <Label>Date:</Label>
            <DatePicker Grid.Column="1" Margin="0,0,0,10" />
            <Label Grid.Row="1">Duration(min):</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />
            <Label Grid.Row="2">Doctor id:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />
        </Grid>
            

        
    </DockPanel>
</Page>

